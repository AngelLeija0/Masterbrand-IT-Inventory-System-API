<configuration>
    <system.webServer>
    <handlers>
        <add name="iisnode" path="server.mjs" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
        <rules>
        <rule name="helloexpress">
            <match url="/*" />
            <action type="Rewrite" url="server.mjs" />
        </rule>
        </rules>
    </rewrite>
    <security>
    <requestFiltering>
        <hiddenSegments>
        <add segment="node_modules" />
        </hiddenSegments>
    </requestFiltering>
    </security>  

    </system.webServer>
</configuration>